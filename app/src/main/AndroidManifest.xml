<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iti.intake41.myapplication">
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YallaTrip">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".tripsmap.MapTripsActivity"
            android:label="@string/title_activity_map_trips" />

        <activity android:name=".creatnote.view.CreatNoteActivity" />
        <activity android:name=".modules.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".modules.view.tripdetails.TripDetailes" />

        <activity android:name=".login.view.LoginActivity" />
        <activity android:name=".signup.view.SignUpActivity" />
        <activity android:name=".modules.view.MainActivity" />

        <activity android:name=".createtrip.view.CreateTrip" />


    </application>

</manifest>