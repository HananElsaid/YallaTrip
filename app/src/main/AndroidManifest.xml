<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="iti.intake41.myapplication">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YallaTrip"
        tools:ignore="ExtraText">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".modules.main.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".modules.login.view.LoginActivity" />
        <activity android:name=".modules.signup.view.SignUpActivity" />
        <activity android:name=".modules.main.MainActivity" />

        <activity android:name=".modules.createtrip.view.CreateTrip" />
        <activity android:name=".modules.main.tripdetails.TripDetailes" />

        <activity
            android:name=".modules.tripsmap.MapTripsActivity"
            android:label="@string/title_activity_map_trips" />

        <activity android:name=".modules.creatnote.view.CreatNoteActivity" />

        //floating widget service
        <service
            android:name=".modules.floatingwidget.FloatWidgetService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".modules.reminder.MyAlarm"
            android:enabled="true"
            android:exported="true" />
        <receiver android:name=".modules.reminder.SnoozeBroadcastReciver"/>
        <activity android:name=".modules.reminder.ReminderTrip"></activity>


    </application>

</manifest>