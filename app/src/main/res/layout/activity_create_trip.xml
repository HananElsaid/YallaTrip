<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background"
    tools:context=".modules.createtrip.view.CreateTrip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="header"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="1">


            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:text="@string/createTrip"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_weight="0.3"
               >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/titleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tripTitle"
                        android:textSize="18sp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp" />
                </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:flow_wrapMode="aligned">

            <LinearLayout
                android:id="@+id/row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/locationIcon"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_locations" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/startPoint"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtStartPoint"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:text="@string/tapToChoose"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/startPoint"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtEndPoint"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/tapToChoose"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:id="@+id/dateTextView"
                android:onClick="datePicker"
                android:text="@string/date"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp"
                app:icon="@drawable/icon_awesome_calendar_alt"
                app:iconGravity="start"
                app:iconTint="@color/greenDark"
                style="@style/CardButton" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:id="@+id/timeTextView"
                android:onClick="timePicker"
                android:text="@string/time"
                app:backgroundTint="@color/white"
                app:cornerRadius="20dp"
                app:icon="@drawable/icon_ionic_ios_time"
                app:iconGravity="start"
                app:iconTint="@color/greenDark"
                style="@style/CardButton" />

        </LinearLayout>

            <CheckBox
                android:id="@+id/roundTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:buttonTint="@color/greenDark"
                android:onClick="onCheckboxClicked"
                android:text="@string/roundTrip"
                tools:targetApi="lollipop"
                android:visibility="invisible"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateTrip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/done_button"
            app:cornerRadius="20dp"
            android:onClick="createTripDone"/>

    </LinearLayout>
</LinearLayout>

